<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.walling.elizaapp.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/buttonDebug"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:text="Debug"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="-15dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_marginStart="98dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/speedBar"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/steerBar" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tbCC"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.516"
        app:layout_constraintRight_toRightOf="parent" />


    <ToggleButton
        android:id="@+id/tbCC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cruise Control"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnStop"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/steerBar"
        app:layout_constraintHorizontal_bias="0.071" />

    <Button
        android:id="@+id/switchScreen"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:text="Connect"
        app:layout_constraintRight_toLeftOf="@+id/buttonDebug"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <SeekBar
        android:id="@+id/speedBar"
        android:layout_width="259dp"
        android:layout_height="54dp"
        android:rotation="270"
        tools:layout_editor_absoluteX="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <SeekBar
        android:id="@+id/steerBar"
        android:layout_width="323dp"
        android:layout_height="42dp"
        app:layout_constraintLeft_toRightOf="@+id/speedBar"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="98dp"
        app:layout_constraintTop_toBottomOf="@+id/switchScreen" />


</android.support.constraint.ConstraintLayout>
