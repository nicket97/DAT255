<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.walling.elizaapp.MainActivity">

    <Button
        android:id="@+id/buttonDebug"
        android:layout_width="104dp"
        android:layout_height="39dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="67dp"
        android:text="Debug"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBackward" />

    <Button
        android:id="@+id/btnForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forward"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="150dp" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnForward"
        app:layout_constraintLeft_toLeftOf="@+id/btnForward" />

    <Button
        android:id="@+id/btnBackward"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:text="Backward"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnStop"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnStop" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/tbCC"
        app:layout_constraintLeft_toRightOf="@+id/btnForward"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />


    <ToggleButton
        android:id="@+id/tbCC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cruise Control"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/btnBackward"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnForward"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/switchScreen"
        android:layout_width="104dp"
        android:layout_height="39dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="67dp"
        android:text="Connect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBackward" />

</android.support.constraint.ConstraintLayout>
