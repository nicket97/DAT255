<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.walling.elizaapp.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Speed"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/speedBar"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/speedBar"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/speedBar" />

    <ToggleButton
        android:id="@+id/autoSteerButton"
        android:layout_width="187dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="44dp"
        android:text="Cruise Control"
        android:textOff="start autosteering"
        android:textOn="stop autosteering"
        app:layout_constraintLeft_toRightOf="@+id/btnStop"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/platoonButton"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cruiseControlButton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.655"
        android:layout_marginTop="138dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/speedBar"
        app:layout_constraintHorizontal_bias="0.274" />


    <ToggleButton
        android:id="@+id/cruiseControlButton"
        android:layout_width="187dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="90dp"
        android:text="Cruise Control"
        android:textOff="START CRUISE CONTROL"
        android:textOn="stop cruise control"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/btnStop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/steerBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.843" />

    <Button
        android:id="@+id/dcButton"
        android:layout_width="112dp"
        android:layout_height="47dp"
        android:layout_marginTop="0dp"
        android:text="disconnect"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="2dp"
        app:layout_constraintRight_toRightOf="parent" />

    <SeekBar
        android:id="@+id/speedBar"
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:rotation="270"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.498"
        android:layout_marginRight="473dp"
        android:progress="25"
        app:layout_constraintRight_toRightOf="parent" />

    <SeekBar
        android:id="@+id/steerBar"
        android:layout_width="323dp"
        android:layout_height="42dp"
        app:layout_constraintLeft_toRightOf="@+id/speedBar"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="102dp"
        app:layout_constraintTop_toBottomOf="@+id/dcButton" />

    <Button
        android:id="@+id/setSpeedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set speed"
        app:layout_constraintRight_toLeftOf="@+id/cruiseControlButton"
        android:layout_marginRight="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/autoSteerButton"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/setSpeedEditText"
        android:layout_width="165dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintRight_toLeftOf="@+id/setSpeedButton"
        android:layout_marginRight="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steering"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/centerButton"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/centerButton"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="68dp"
        android:layout_height="31dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/btnStop"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnStop"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btnStop"
        app:layout_constraintHorizontal_bias="0.33" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Speed in cm/s"
        app:layout_constraintBottom_toTopOf="@+id/setSpeedEditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/setSpeedEditText"
        app:layout_constraintRight_toLeftOf="@+id/setSpeedButton"
        app:layout_constraintTop_toBottomOf="@+id/steerBar"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/centerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="60dp"
        android:text="center"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintLeft_toLeftOf="@+id/steerBar"
        app:layout_constraintRight_toRightOf="@+id/steerBar"
        app:layout_constraintTop_toBottomOf="@+id/dcButton" />

    <ToggleButton
        android:id="@+id/platoonButton"
        android:layout_width="116dp"
        android:layout_height="93dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="ToggleButton"
        android:textOff="start platooning"
        android:textOn="stop platooning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.985"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971" />


</android.support.constraint.ConstraintLayout>