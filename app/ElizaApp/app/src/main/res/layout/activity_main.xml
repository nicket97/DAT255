<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.walling.elizaapp.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ToggleButton
        android:id="@+id/platooningButton"
        android:layout_width="187dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="54dp"
        android:text="Cruise Control"
        android:textOff="start platooning"
        android:textOn="stop platooning"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/btnStop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/steerBar"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cruiseControlButton" />

    <Button
        android:id="@+id/buttonDebug"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:text="Debug"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="-15dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_marginStart="98dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="67dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.498"
        app:layout_constraintRight_toLeftOf="@+id/steerBar"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />


    <ToggleButton
        android:id="@+id/cruiseControlButton"
        android:layout_width="187dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="90dp"
        android:text="Cruise Control"
        android:textOff="START CRUISE CONTROL"
        android:textOn="stop cruise control"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/btnStop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/steerBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/switchScreen"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:text="Connect"
        app:layout_constraintRight_toLeftOf="@+id/buttonDebug"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <SeekBar
        android:id="@+id/speedBar"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:rotation="270"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.498"
        android:layout_marginRight="406dp"
        app:layout_constraintRight_toRightOf="parent" />

    <SeekBar
        android:id="@+id/steerBar"
        android:layout_width="323dp"
        android:layout_height="42dp"
        app:layout_constraintLeft_toRightOf="@+id/speedBar"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toBottomOf="@+id/switchScreen" />

    <Button
        android:id="@+id/setSpeedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set speed"
        app:layout_constraintRight_toLeftOf="@+id/cruiseControlButton"
        android:layout_marginRight="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/platooningButton"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/setSpeedEditText"
        android:layout_width="165dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintRight_toLeftOf="@+id/setSpeedButton"
        android:layout_marginRight="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed in cm/s"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/setSpeedEditText"
        app:layout_constraintLeft_toRightOf="@+id/btnStop"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toLeftOf="@+id/setSpeedButton"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/steerBar"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/centerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="60dp"
        android:text="center"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintLeft_toLeftOf="@+id/steerBar"
        app:layout_constraintRight_toRightOf="@+id/steerBar"
        app:layout_constraintTop_toBottomOf="@+id/switchScreen" />


</android.support.constraint.ConstraintLayout>